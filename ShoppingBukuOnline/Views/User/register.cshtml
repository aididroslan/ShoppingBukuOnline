@model ShoppingBukuOnline.ViewModels.UserCustomer
@{
    ViewBag.Title = "Customer Registration";
}

<h2>Customer Registration</h2>

@using (Html.BeginForm("addCustomer", "User"))
{
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                @Html.Label("Customer Info")<br />
                @Html.Label("Email: ") <br />
                @Html.TextBoxFor(m => m.User.email, new { @class = "form-control", placeholder = "Email" }) <br />

                @Html.Label("Passwod: ") <br />
                @Html.TextBoxFor(m => m.User.password, new { @class = "form-control", placeholder = "Password", Type = "password" }) <br />

                @Html.Label("Full Name: ") <br />
                @Html.TextBoxFor(m => m.Customer.name, new { @class = "form-control", placeholder = "Full Name" }) <br />
                @Html.Label("Phone No: ") <br />
                @Html.TextBoxFor(m => m.Customer.phone, new { @class = "form-control", placeholder = "Phone No" }) <br />
               
            </div>

            <div class="col-lg-6">
                <br /><br />
                @Html.Label("Address: ") <br />
                @Html.TextBoxFor(m => m.Customer.address, new { @class = "form-control", placeholder = "Addres" }) <br />
                @Html.Label("City: ") <br />
                @Html.TextBoxFor(m => m.Customer.city, new { @class = "form-control", placeholder = "City" }) <br />
                @Html.Label("State: ") <br />
                @Html.TextBoxFor(m => m.Customer.state, new { @class = "form-control", placeholder = "State" }) <br />
                @Html.Label("Postcode: ") <br />
                @Html.TextBoxFor(m => m.Customer.postcode, new { @class = "form-control", placeholder = "Postcode" }) <br />
                <br />
                <button class="btn btn-success" type="submit">Submit</button>
                </div>
        </div>
    </div>
}

